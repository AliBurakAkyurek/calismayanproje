        class arac
        {
            string renk;
            int motorGucu;
            double fiyat;
            int arabaKodu;
            public string getArac()
            {
                return arabaKodu.ToString() + "  " + renk + "  " + fiyat.ToString();
            }
            public arac(string aracKodu, string aracRengi, string aracFiyat, double aracGucu)
            {
                arabaKodu = aracKodu;
                renk = aracRengi;
                motorGucu = aracGucu;
                fiyat = aracFiyat;
            }
